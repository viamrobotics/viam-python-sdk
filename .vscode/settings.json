{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,
  "python.linting.ignorePatterns": [
    "**/site-packages/**/*.py",
    ".vscode/*.py",
    "gen/**/*",
    "viam/proto/**/*"
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [
    {
      "column": 140,
      "color": "#777777"
    }
  ],
  "cSpell.words": [
    "frombytes",
    "grpclib",
    "klass",
    "pointcloud",
    "RSDK",
    "segmenters",
    "TFLITE",
    "tobytes",
    "viam"
  ],
  "isort.args": ["-l 140 --profile black"]
}
